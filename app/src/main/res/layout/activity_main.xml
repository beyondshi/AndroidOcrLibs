<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:ignore="MissingClass">

    <Button
        android:id="@+id/mScanIdCard"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:text="识别身份证"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mScanDriverCard"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="识别驾驶证"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mScanIdCard" />

    <Button
        android:id="@+id/mScanBankCard"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="识别银行卡"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mScanDriverCard" />

    <Button
        android:id="@+id/mScanCarCard"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="识别车牌号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mScanBankCard" />

    <TextView
        android:id="@+id/mSuccessText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:gravity="left|top"
        android:text="识别结果"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mScanCarCard" />
</androidx.constraintlayout.widget.ConstraintLayout>